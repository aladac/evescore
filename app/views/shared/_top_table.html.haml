%table.table.table-striped
  = top_table_caption(caption, more ||= false)
  = top_table_head(subject, value)
  %tbody
    - top_table.each do |record|
      = top_table_row(record, subject_image_link: subject_image_link, subject_field: subject_field, value_field: value_field, subject_link: subject_link, value_display: value_display)