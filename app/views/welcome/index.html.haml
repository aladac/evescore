.row
  .col-sm-4
    %table.table.table-striped
      %caption
        Top 5 Total ISK Earned
        %span.pull-right= link_to 'More', '#'
      %thead
        %tr
          %th.icon
          %th Character
          %th.numeric Amount
      %tbody
        - @top_isk.each do |record|
          %tr
            %td= link_to character_image(record['_id'], 32), character_profile_path(record['_id'])
            %td= link_to Character.find(record['_id']).name, character_profile_path(record['_id'])
            %td.numeric= number_to_isk_short record['amount']
  .col-sm-4
    %table.table.table-striped
      %caption
        Top 5 Ticks
        %span.pull-right= link_to 'More', global_ticks_path
      %thead
        %tr
          %th.icon
          %th Character
          %th.numeric Amount
      %tbody
        - @top_ticks.each do |record|
          %tr
            %td= link_to character_image(record['character_id'], 32), character_profile_path(record['character_id'])
            %td= link_to Character.find(record['character_id']).name, character_profile_path(record['character_id'])
            %td.numeric= number_to_isk_short record['amount']
  .col-sm-4
    %table.table.table-striped
