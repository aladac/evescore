%p#notice= notice

%ol.breadcrumb
  %li.breadcrumb-item
    = link_to 'Welcome Page', root_path
  %li.breadcrumb-item
    = link_to @character.name, character_profile_path(@character)
  %li.breadcrumb-item.active Awards

.panel.panel-default
  .panel-heading
    %h3.panel-title Awards
  .panel-body
    - Award.grouped.each do |group, awards|
      .row
        .col-sm-12
          %h5.award-group= group
      - awards.sort_by { |a| a.tier }.each do |award|
        .panel.award.col-sm-5{ class: @character.award?(award) ? 'award-active' : 'text-muted' }
          .row
            .col-sm-2
              = award_icon(award)
            .col-sm-10
              %h5= award.name
              %p
                %small= award.description
